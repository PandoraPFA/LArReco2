<pandora>
    <!-- GLOBAL SETTINGS -->
    <IsMonitoringEnabled>true</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>false</ShouldDisplayAlgorithmInfo>
    <SingleHitTypeClusteringMode>true</SingleHitTypeClusteringMode>

    <!-- ALGORITHM SETTINGS -->
    <algorithm type = "LArPreProcessing">
        <OutputCaloHitListNameU>SSCaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>SSCaloHitListV</OutputCaloHitListNameV>
        <OutputCaloHitListNameW>SSCaloHitListW</OutputCaloHitListNameW>
        <FilteredCaloHitListName>SSCaloHitList2D</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>SSCaloHitList2D</CurrentCaloHitListReplacement>
    </algorithm>

    <algorithm type = "LArMCParticleMonitoring">
       <MCParticleListName>Input</MCParticleListName>
       <CaloHitListName>SSCaloHitList2D</CaloHitListName>
       <UseTrueNeutrinosOnly>true</UseTrueNeutrinosOnly>
       <MinHitsForDisplay>1</MinHitsForDisplay>
       <MinPrimaryGoodHits>1</MinPrimaryGoodHits>
       <MinHitsForGoodView>1</MinHitsForGoodView>
    </algorithm>

    <algorithm type = "LArDLSNSignal">
        <TrainingMode>false</TrainingMode>
        <ImageHeight>256</ImageHeight>
        <ImageWidth>256</ImageWidth>
        <PrintOut>true</PrintOut>
        <TrainingOutputFileName>LowE_P1</TrainingOutputFileName>
        <ApplyCheatedSeparation>false</ApplyCheatedSeparation>
        <CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
        <InputCaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</InputCaloHitListNames>
        <SignalListNameU>SCaloHitListU</SignalListNameU>
        <SignalListNameV>SCaloHitListV</SignalListNameV>
        <SignalListNameW>SCaloHitListW</SignalListNameW>
        <SignalListName2D>SCaloHitList2D</SignalListName2D>
        <BackgroundListName>BBCaloHitList</BackgroundListName>
        <ZoomCaloHitListU>SCaloHitListU</ZoomCaloHitListU>
        <ZoomCaloHitListV>SCaloHitListV</ZoomCaloHitListV>
        <ZoomCaloHitListW>SCaloHitListW</ZoomCaloHitListW>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_1_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_1_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_1_W.pt</ModelFileNameW>
        <Visualise>false</Visualise>
        <VisualiseZoom>false</VisualiseZoom>
    </algorithm>

    <algorithm type = "LArDLSNSignal">
        <TrainingMode>false</TrainingMode>
        <TrainingOutputFileName>LowE_P2</TrainingOutputFileName>
        <PrintOut>true</PrintOut>
        <Pass>2</Pass>
        <ImageHeight>128</ImageHeight>
        <ImageWidth>128</ImageWidth>
        <CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
        <InputCaloHitListNames>SCaloHitListW SCaloHitListU SCaloHitListV</InputCaloHitListNames>
        <SignalListNameU>CaloHitListU</SignalListNameU>
        <SignalListNameV>CaloHitListV</SignalListNameV>
        <SignalListNameW>CaloHitListW</SignalListNameW>
        <SignalListName2D>CaloHitList2D</SignalListName2D>
        <BackgroundListName>BCaloHitList</BackgroundListName>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_2_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_2_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_dunefdhd_backgrounds_lowe_06_12_24_2_W.pt</ModelFileNameW>
	<Visualise>false</Visualise>
    </algorithm>

    <algorithm type = "LArDLVertexing">
        <TrainingMode>false</TrainingMode>
        <OutputVertexListName>NeutrinoVertices3D_Pass1</OutputVertexListName>
        <CaloHitListNames>CaloHitListW CaloHitListU CaloHitListV</CaloHitListNames>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_HD_LOWE_Prod_06_12_24_1_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_HD_LOWE_Prod_06_12_24_1_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_HD_LOWE_Prod_06_12_24_1_W.pt</ModelFileNameW>
	<Visualise>false</Visualise>
        <DistanceThresholds>0. 0.005 0.009 0.015 0.025 0.04 0.06 0.18 0.25 1.0</DistanceThresholds>
    </algorithm>

    <algorithm type = "LArDLVertexing">
        <TrainingMode>false</TrainingMode>
        <Pass>2</Pass>
        <InputVertexListName>NeutrinoVertices3D_Pass1</InputVertexListName>
        <OutputVertexListName>NeutrinoVertices3D</OutputVertexListName>
