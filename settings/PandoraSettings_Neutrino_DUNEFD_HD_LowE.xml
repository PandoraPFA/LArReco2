    <algorithm type = "LArOvershootSplitting"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>
    <algorithm type = "LArHitWidthClusterMerging"/>

    <!-- VertexAlgorithms -->
    <algorithm type = "LArVertexSplitting">
        <InputClusterListNames>ClustersU ClustersV ClustersW</InputClusterListNames>
    </algorithm>

    <!-- BdtLowEClusterMergingAlgorithm -->
    <algorithm type = "LArBdtLowEClusterMerging">
        <MCParticleListName>Input</MCParticleListName>
        <PrintOut>false</PrintOut>
        <VertexListName>NeutrinoVertices3D</VertexListName>
        <CaloHitListName>CaloHitList2D</CaloHitListName>
        <InputClusterListNames>ClustersU ClustersV ClustersW</InputClusterListNames>
        <EnableProbability>false</EnableProbability>
        <MinProbabilityCut>0.475f</MinProbabilityCut>
        <TrainingSetMode>false</TrainingSetMode>
        <TrainingOutputFileName>LowEBackgroundClusterMergingOutputFixed.csv</TrainingOutputFileName>
        <MvaFileName>PandoraMVAData/LowE_MVAClusterMerge_HD_Backgrounds_NewProduction_09_12_24.xml</MvaFileName>
	<MvaName>MVALowEClusterMerging</MvaName>
        <UpperHitThreshold>4</UpperHitThreshold>
        <MinNCaloHits>1</MinNCaloHits>
        <CountHitsThreshold>0</CountHitsThreshold>
        <ContactThreshold>5</ContactThreshold>
        <ProximityThreshold>20</ProximityThreshold>
        <EdgeHitToolDivisions>8</EdgeHitToolDivisions>
        <SectorTolerance>0.04</SectorTolerance>
    </algorithm>

    <!-- BdtLowEClusterMergingAlgorithm -->
     <algorithm type = "LArBdtLowEClusterMerging">
